<div class="container">
	<div class="form-container">
		<form id="login-form" class="login-form">
			<div class="form-group">
				<input type="text" id="email-login" placeholder="Email" required />
			</div>
			<div class="form-group">
				<input type="password" id="password-login" placeholder="Password" required />
			</div>
			<div class="form-group">
				<div class="button-container">
					<button class="login custom-cursor" type="submit" id="login" onClick = "playAudio()">Login</button>
					<button class="signup custom-cursor" type="submit" id="signup" onClick = "playAudio()">Sign Up</button>
				</div>
				{{!-- <button type="submit" id="newAccount">Create Account</button> --}}
				<div class="google-btn custom-cursor" style="max-width: 292px;">
					<a href="/auth/google">
						<div class="google-icon-wrapper">
							<img class="google-icon-svg"
								src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" />
						</div>
						<p class="btn-text"><b>Continue with Google</b></p>
					</a>
				</div>
			</div>
			{{!-- <button type="submit" id="newAccount">Create Account</button> --}}
	</div>
	</form>
</div>


<script src='/js/login.js'></script>